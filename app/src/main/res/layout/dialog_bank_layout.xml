<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">



        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="5dp"

            >
           <ImageView
               android:id="@+id/logo"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="10dp"
               android:background="@drawable/bank"/>
         <EditText
             android:id="@+id/et_accno"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/logo"
             android:background="@drawable/edit_bg"
             android:textSize="18dp"
             android:padding="7dp"
             android:hint="Account No."
             android:gravity="center"
             android:textStyle="italic"
             android:textColorHint="@color/black"
             android:textColor="@color/black"
             android:inputType="number"
             android:layout_marginRight="10dp"
             />

            <EditText
                android:id="@+id/et_bankname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_accno"
                android:background="@drawable/edit_bg"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:padding="7dp"
                android:textStyle="italic"
                android:textColorHint="@color/black"
                android:hint="Bank Name"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"/>

            <EditText
            android:id="@+id/et_ifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_bankname"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:textSize="18dp"
                android:textStyle="italic"
                android:textColorHint="@color/black"
            android:padding="7dp"
            android:hint="IFSC Code"
                android:gravity="center"
            android:textColor="@color/textcolor"
            android:inputType="text"
            android:layout_marginRight="10dp"
            />
            <EditText
                android:id="@+id/et_hname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_ifsc"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColorHint="@color/black"
                android:padding="7dp"
                android:hint="Accoutn Holder Name"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:inputType="text"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Bank Details"
            android:backgroundTint="@color/black"
            android:background="@drawable/button_bg"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            />

    </LinearLayout>


</RelativeLayout>