<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GamesFragment.SpMotorFragment">
<include
    layout="@layout/background_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                layout="@layout/date_time_layout"/>
            <LinearLayout
                android:id="@+id/lin_spMotor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:weightSum="2">
                <TextView
                    android:id="@+id/tv_motor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SP MOTOR"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_spMotor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="MOTOR"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/card_shape"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_dpMotor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DP MOTOR"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_dpMotor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="DP MOTOR"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/card_shape"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/points"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="@string/points"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/card_shape"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_bg"
                android:text="@string/add"
                />
            <include layout="@layout/gamebottomlayout"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>