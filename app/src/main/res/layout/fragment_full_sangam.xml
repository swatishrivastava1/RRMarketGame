<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GamesFragment.FullSangamFragment">
<include
    layout="@layout/background_layout"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:textStyle="italic|bold"
                android:textAlignment="center"
                android:layout_weight=".5"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textAllCaps="true"
                android:drawableStart="@drawable/thursday_16px"
                android:textColor="@color/black"
                android:background="@drawable/card_shape"
                android:text="@string/select_date"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_closeDigit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/open_panna"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <AutoCompleteTextView
                    android:id="@+id/auto_openPanna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="@string/open_panna"
                    android:inputType="number"
                    android:maxLength="3"
                    android:gravity="center"
                    android:dropDownHeight="150dp"
                    android:completionThreshold="1"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/card_shape"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/close_panna"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <AutoCompleteTextView
                    android:id="@+id/auto_closePanna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="@string/close_panna"
                    android:inputType="number"
                    android:maxLength="3"
                    android:gravity="center"
                    android:dropDownHeight="150dp"
                    android:completionThreshold="1"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/card_shape"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:padding="10dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="@string/points"
                android:textColorHint="@color/gray"
                android:layout_weight="1"
                android:background="@drawable/card_shape"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_bg"
            android:text="@string/add"
            />

<!--        <include layout="@layout/gamebottomlayout"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/relHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    android:weightSum="5"
                    android:gravity="center_horizontal"
                    android:background="@drawable/card_shape">

                    <TextView
                        android:id="@+id/txtno"
                        android:layout_width="0dp"
                        android:layout_weight=".9"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        android:textSize="15dp" />



                    <TextView
                        android:id="@+id/txtgame"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/game"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtdigit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/digit"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_toRightOf="@id/txtgame"

                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtpoint"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/point"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_toRightOf="@id/txtdigit"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_action"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_toRightOf="@id/txtpoint"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ListView
                    android:layout_marginTop="5dp"
                    android:id="@+id/list_table"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>

            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg"
        android:text="@string/submit_bid"

        />
</RelativeLayout>